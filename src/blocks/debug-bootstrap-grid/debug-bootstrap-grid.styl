.debug-bootstrap-grid
	display none
	&.active
		display block
		position fixed
		width 100%
		height 100%
		left 0
		top 0
		z-index 999999
		.container
		.wrap
			position relative
			height 100%
		.row
			position relative
			height 100%
		.col-xs-1
			background-color rgba(0, 200, 0, .1)
			position relative
			height 100%
			&:after
				content ''
				display block
				position relative
				width 100%
				height 100%
				background-color rgba(0, 0, 200, .1)