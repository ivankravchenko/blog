// Gravity Forms
.gform
	&_wrapper
		margin 50px auto
		@media phone
			margin 20px auto
		.validation_message
		.gfield_description
		.validation_error
			display none !important
			position absolute
			left 0
			top 0
			width 0
			height 0
			overflow hidden
			opacity 0
		.gfield
			padding 0 !important
			list-style none
			margin 0 0 30px !important
			@media phone
				margin-bottom 15px !important
			clearfix()
			&_label
				font-weight normal !important
				padding 8px 15px 10px
				font-size 15px
				line-height 1.428571429
				margin 0 15px 0 0 !important
				width 23% !important
				@media phone
					float none !important
					width auto !important
					padding-left 0 !important
					padding-right 0 !important
					padding-bottom 4px !important
					display block !important
					text-align left !important
			&_required
				display none
			.ginput_container
				width 50%
				float left
				margin 0 !important
				@media phone
					float none
					width auto
			input[type="text"]
			input[type="email"]
			input[type="password"]
			textarea
				display block
				width 100% !important
				height 40px
				padding 8px 15px 10px
				font-size 15px
				line-height 1.428571429
				color #000
				background-color #fff
				background-image none
				border 1px solid #e0e0e0
				transition border-color ease-in-out .15s, box-shadow ease-in-out .15s

			textarea
				resize vertical
				overflow auto
				height 150px
			&_error
				&.gfield.gfield_contains_required
					padding 0 !important
					border 0 none !important
					background none !important
					margin 0 0 30px 0 !important
					@media phone
						margin-bottom 15px !important
				.gfield_label
					color red !important
				input[type="text"]
				input[type="email"]
				input[type="password"]
				textarea
					border-color red !important
		.gform_footer
			padding 0 !important
			text-align center !important
			input[type="submit"]
				display inline-block
				margin-bottom 0
				text-align center
				vertical-align middle
				cursor pointer
				border 1px solid transparent
				white-space nowrap
				padding 4px 18px
				border-radius 0
				box-shadow 0 1px 2px rgba(0,0,0,0.4)

				font-size 15px
				line-height 1.5
				font-weight 400
				text-decoration none
				text-transform uppercase
				text-shadow 0 1px 1px rgba(0,0,0,0.4)
				color #fff
				background-color rgba(255,255,255,0.3)
				background-image linear-gradient(to bottom,rgba(255,255,255,0.3) 0,rgba(0,0,0,0.1) 100%);
				filter s('progid:DXImageTransform.Microsoft.gradient(startColorstr=%s,endColorstr=%s,GradientType=0)', '#4CFFFFFF', '#19000000')
				zoom 1

				background-color #0072bc
				border-color #0066b3
				&:active
				&.active
					outline 0
					background-image none
					filter none
					box-shadow inset 0 3px 5px rgba(0,0,0,0.125)
	&_confirmation_wrapper
		padding 100px 0
